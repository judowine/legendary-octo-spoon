# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/account_system
DATABASE_USER=admin
DATABASE_PASSWORD=admin_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-secret-key-min-256-bits-change-in-production
JWT_ISSUER=account-system
JWT_AUDIENCE=account-system-users
JWT_ACCESS_TOKEN_EXPIRY=900000    # 15分（ミリ秒）
JWT_REFRESH_TOKEN_EXPIRY=2592000000  # 30日（ミリ秒）

# SMTP (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@example.com

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/github/callback

# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Rate Limiting
RATE_LIMIT_LOGIN=5           # 5回/5分
RATE_LIMIT_REGISTER=3        # 3回/時間
RATE_LIMIT_PASSWORD_RESET=3  # 3回/時間
